@using evdekinisatcom.MvcWebApp.Entity.ViewModels;
@model ProfileImageViewModel
@{
    ViewData["Title"] = "Profil Fotoğrafını Güncelle";
    Layout = "_LayoutBase"; // Varsayılan layout'unuzu buraya ekleyin.
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    @if (TempData["pictureMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["pictureMessage"]
                        </div>
                    }

                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfilePic" asp-controller="Account" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="profileImage" class="control-label">Profil Fotoğrafı</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="profilePic" required>
                                <label class="custom-file-label" for="profilePic">Fotoğraf seçiniz...</label>
                            </div>
                            <small class="form-text text-muted">Desteklenen formatlar: .jpg, .jpeg, .png</small>
                        </div>
                        <div class="form-group mt-4">
                            <a asp-action="Index" asp-controller="Account"><button type="submit" class="btn btn-solid btn-block">Fotoğrafı Güncelle</button></a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}