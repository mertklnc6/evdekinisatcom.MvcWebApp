@model IEnumerable<ProductViewModel>
@*@model List<ProductViewModel>*@

@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Index";
}
<!-- section start -->
<section class="section-b-space ratio_asos">
    <div class="collection-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 collection-filter">
                   
                    <div class="collection-filter-block">
                        
                        <div class="collection-mobile-back">
                            <span class="filter-back">
                                <i class="fa fa-angle-left"
                                   aria-hidden="true"></i> Geri
                            </span>
                        </div>
                        

                        <form method="post" action="/Product/Index">
                        <div class="collection-collapse-block open">
                            <h3 class="collapse-block-title">Marka</h3>
                            <div class="collection-collapse-block-content">

                                <div class="collection-brand-filter">
                                    <div class="form-check collection-filter-checkbox">

                                                    <input type="text" class="form-control"
                                                           id="exampleInputPassword1"
                                                           placeholder="Ürünlerde Ara..." name="search">
                                                  
                                </div>
                            </div>

                            </div>
                        </div>
                            <div class="collection-collapse-block open" style="margin-bottom: 0px;">
                            <h3 class="collapse-block-title">Renk</h3>
                            <div class="collection-collapse-block-content">
                                    <div class="collection-brand-filter" id="unique-filter" style="margin-top: 20px">
                                        <div class="form-check collection-filter-checkbox">

                                    <ul>
                                        <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Açık Mavi" id="Açık Mavi">
                                                    <label class="form-check-label ml-2" for="Altın">Altın</label>
                                        </div>

                                        <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Yeşil" id="Yeşil">
                                                    <label class="form-check-label " for="Yeşil">Yeşil</label>
                                        </div>

                                        <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Bordo" id="Bordo">
                                                    <label class="form-check-label" for="Bordo">Bordo</label>
                                        </div>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Kırmızı" id="Kırmızı">
                                                    <label class="form-check-label" for="Kırmızı">Kırmızı</label>
                                                </div>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Lacivert" id="Lacivert">
                                                    <label class="form-check-label" for="Lacivert">Lacivert</label>
                                                </div>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Mavi" id="Mavi">
                                                    <label class="form-check-label" for="Mavi">Mavi</label>
                                                </div>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Mor" id="Mor">
                                                    <label class="form-check-label" for="Mor">Mor</label>
                                                </div>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Pembe" id="Pembe">
                                                    <label class="form-check-label" for="Pembe">Pembe</label>
                                                </div>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Sarı" id="Sarı">
                                                    <label class="form-check-label" for="Sarı">Sarı</label>
                                                </div>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="selectedColor" value="Siyah" id="Siyah">
                                                    <label class="form-check-label" for="Siyah">Siyah</label>
                                                </div>
                                                
                                    </ul>
                                            
                                        </div>
                                        
                                        <input class="btn btn-solid btn-xs" type="submit" value="Uygula">
                                            <br>
                                        
                            </div>
                                    
                        </div>
                               
                            </div>
                           
                       </form>

                       <form asp-action=Index asp-controller="Product" method="get">
                        <div class="collection-collapse-block open">

                                <div class="collection-brand-filter" style="margin-bottom: 20px;" id="unique-filter">
                                        @*<button class="btn text-muted" type="submit">Filtreyi sıfırla</button>*@

                                    <input type="submit" class="btn btn-solid btn-xs" value="Filtreyi sıfırla">
                                    </div>
                                </div>                         
                        </form>
                       
                        
                        






                        <div class="theme-card">
                        <h5 class="title-border">Yeni Ürünler</h5>
                        <div class="offer-slider slide-1">
                                
                                    
                                        <div class="media ">
                                        @await Component.InvokeAsync("Siralama", new { showAll = false, startIndex = 0 })                         
                                        </div>
                                    
                                    
                                        <div class="media ">
                                        @await Component.InvokeAsync("Siralama", new { showAll = false, startIndex = 1 })
                                        </div>
                                        
                                    

                                        <div class="media" img-responsive>
                                        @await Component.InvokeAsync("Siralama", new { showAll = false, startIndex = 2 })
                                    </div>
                                
                                            
                                </div>
                        </div>
                    </div>
                    <!-- side-bar single product slider end -->
                    <!-- side-bar banner start here -->
                    <div class="collection-sidebar-banner">
                        <a href="#">
                            <img src="~/images/site/model4.jpg" width="370" height="220" class="img-fluid blur-up lazyload"
                                 alt="">
                        </a>
                    </div>
                    <!-- side-bar banner end here -->
                </div>
                <div class="collection-content col">
                    <div class="page-main-content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="top-banner-wrapper">
                                    <a href="#">
                                        <img src="~/images/site/model3.jpg"
                                             class="img-fluid blur-up lazyload" alt="">
                                    </a>
                                    <div class="top-banner-content small-section">
                                        <h4>Popüler Markalar, Büyük İndirimler!</h4>
                                        <p>
                                            Sıradışı fırsatları kaçırmayın! Binlerce ikinci el ürün arasında dolaşın ve istediğiniz şeyi bulun. Ekonomik alışverişin tadını çıkarın ve cebinizi koruyun. İstediğiniz ürünü bulmak için hemen göz atın!
                                        </p>
                                    </div>
                                </div>
                                <div class="collection-product-wrapper">
                                    <div class="product-top-filter">
                                        <div class="row">
                                            <div class="col-xl-12">
                                                <div class="filter-main-btn">
                                                    <span class="filter-btn btn btn-theme">
                                                        <i class="fa fa-filter"
                                                           aria-hidden="true"></i> Filtrele
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="product-filter-content">
                                                    <div class="search-count">
                                                        <h5></h5>
                                                    </div>
                                                    <div class="collection-view">
                                                        <ul>
                                                            <li><i class="fa fa-th grid-layout-view"></i></li>
                                                            <li><i class="fa fa-list-ul list-layout-view"></i></li>
                                                        </ul>
                                                    </div>
                                                    <div class="collection-grid-view">
                                                        <ul>
                                                            <li>
                                                                <img src="~/themes/assets/images/icon/2.png" alt=""
                                                                     class="product-2-layout-view">
                                                            </li>
                                                            <li>
                                                                <img src="~/themes/assets/images/icon/3.png" alt=""
                                                                     class="product-3-layout-view">
                                                            </li>
                                                            <li>
                                                                <img src="~/themes/assets/images/icon/4.png" alt=""
                                                                     class="product-4-layout-view">
                                                            </li>
                                                            <li>
                                                                <img src="~/themes/assets/images/icon/6.png" alt=""
                                                                     class="product-6-layout-view">
                                                            </li>
                                                        </ul>
                                                    </div>

                                                    <div class="product-page-filter">
                   
                                                        <form method="post" action="/Product/Siralama">
                                                            <select id="myList" name="sortOrder">
                                                                <option value="asc">Artan Sırada</option>
                                                                <option value="desc">Azalan Sırada</option>
                                                                
                                                            </select>
                                                            <input type="submit" class="btn btn-solid btn-xs" value="Uygula">
                                                        </form>
                                                    </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="product-wrapper-grid">
                                        <div class="row margin-res">
                                            @*@await Component.InvokeAsync("Siralama");*@
                                            @foreach (var product in Model)
                                            {
                                                <div class="col-xl-3 col-6 col-grid-box">
                                                    <div class="product-box">
                                                        <div class="img-wrapper">
                                                            <div class="front">
                                                                <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">
                                                                    <img src="@product.HeaderImageUrl"
                                                                         class="img-fluid blur-up lazyload bg-img"
                                                                         alt="">
                                                                </a>
                                                            </div>                                                            
                                                            <div class="cart-info cart-wrap">
                                                                <button data-bs-toggle="modal"
                                                                        data-bs-target="#addtocart" title="Sepete Ekle">
                                                                    <i class="ti-shopping-cart"></i>
                                                                </button> <a href="javascript:void(0)" title="İstek Listesine Ekle">
                                                                    <i class="ti-heart" aria-hidden="true"></i>
                                                                </a> <a href="#" data-bs-toggle="modal"
                                                                        data-bs-target="#quick-view" title="Hızlı Bakış">
                                                                    <i class="ti-search" aria-hidden="true"></i>
                                                                </a> <a href="compare.html" title="Compare">
                                                                    <i class="ti-reload" aria-hidden="true"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <div class="product-detail">
                                                            <div>
                                                                <div class="rating">
                                                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                                </div>
                                                                <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">
                                                                    <h6>@product.Title</h6>
                                                                </a>
                                                                <p>
                                                                    @product.Description
                                                                </p>
                                                                <h4>@product.Price</h4>
                                                                <ul class="color-variant">
                                                                    <li class="bg-light0"></li>
                                                                    <li class="bg-light1"></li>
                                                                    <li class="bg-light2"></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            
                                            
                                        </div>
                                    </div>
                                    <div class="product-pagination">
                                        <div class="theme-paggination-block">
                                            <div class="row">
                                                <div class="col-xl-6 col-md-6 col-sm-12">
                                                    <nav aria-label="Page navigation">
                                                        <ul class="pagination">
                                                            <li class="page-item">
                                                                <a class="page-link" href="#"
                                                                   aria-label="Previous">
                                                                    <span aria-hidden="true">
                                                                        <i class="fa fa-chevron-left"
                                                                           aria-hidden="true"></i>
                                                                    </span> <span class="sr-only">Önceki</span>
                                                                </a>
                                                            </li>
                                                            <li class="page-item active">
                                                                <a class="page-link"
                                                                   href="#">1</a>
                                                            </li>
                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                   href="#">2</a>
                                                            </li>
                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                   href="#">3</a>
                                                            </li>
                                                            <li class="page-item">
                                                                <a class="page-link" href="#"
                                                                   aria-label="Next">
                                                                    <span aria-hidden="true">
                                                                        <i class="fa fa-chevron-right"
                                                                           aria-hidden="true"></i>
                                                                    </span> <span class="sr-only">İleri</span>
                                                                </a>
                                                                    </li>
                                                                </ul>
                                                            </nav>
                                                        </div>
                                                        <div class="col-xl-6 col-md-6 col-sm-12">
                                                            <div class="product-search-count-bottom">
                                                                <h5>Showing Products 1-24 of 10 Result</h5>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</section>
<!-- section End -->

<script>
    function openSearch() {
        document.getElementById("search-overlay").style.display = "block";
    }

    function closeSearch() {
        document.getElementById("search-overlay").style.display = "none";
    }
</script>
