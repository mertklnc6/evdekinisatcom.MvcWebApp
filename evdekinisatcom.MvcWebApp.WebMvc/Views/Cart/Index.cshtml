@using evdekinisatcom.MvcWebApp.Entity.ViewModels;
@model List<CartItemViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{

    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>

}
else
{



    @if (Model.Count() > 0)
    {
        <h2>Sepetiniz</h2>




        <table class="table">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Miktar</th>
                    <th>Satıcı</th>
                    <th>Fiyat</th>
                    <th>Toplam</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Title</td>
                        <td>@item.Quantity</td>
                        <td>@item.SellerUsername</td>
                        <td>@item.Price</td>
                        <td>
                            @(
                                item.Quantity * item.Price
                                )
                        </td>
                        <td>
                            <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                <input type="hidden" name="cartId" value="@item.CartId" />
                <input type="hidden" name="productId" value="@item.ProductId" />
                <input type="submit" value="Sepetten Çıkar" class="btn btn-danger" />
                </form>
                        </td>
                    </tr>
                }
                <h3>Toplam Tutar: @Model.Sum(x => x.Quantity * x.Price)</h3>
            </tbody>
        </table>

        <a type="submit" class="btn btn-primary" asp-action="ConfirmAddress" asp-controller="Order">Sepeti Onayla</a>
    }
    else
    {
        <p>Sepetinizde ürün bulunmamaktadır.</p>
    }
}








