@using evdekinisatcom.MvcWebApp.Entity.ViewModels;
@model List<OrderActivityViewModel>
@{
    ViewData["Title"] = "UserBuyerActivity";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>UserBuyerActivity</h1>
<div class="row text-center mx-auto"></div>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Sipariş Numarası</th>
            <th>Satıcı</th>
            <th>Alıcı</th>
            <th>Alıcı Adresi</th>
            <th>Toplam Tutar</th>
            <th>Komisyon Tutarı</th>
            <th>Net Tutar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.OrderNumber</td>
                <td>@activity.SellerName @activity.SellerSurname</td>
                <td>@activity.BuyerName @activity.BuyerSurname</td>
                <td>@activity.BuyerAddress</td>
                <td>@activity.TotalAmount</td>
                <td>@activity.FeeAmount</td>
                <td>@activity.NetAmount</td>
            </tr>
        }
    </tbody>
</table>
